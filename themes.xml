<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!--Primary brand color.-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/creamy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary brand color.-->
        <item name="colorSecondary">@color/creamo</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color splash screen -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- status bar color.-->

    </style>

    <style name="Buttongrenn">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/dolpino</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="Buttongrey">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/dolpino</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="Title">
        <item name="android:fontFamily">@font/dolpino</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>